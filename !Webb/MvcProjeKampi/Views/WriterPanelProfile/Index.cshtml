@using System.ComponentModel.DataAnnotations
@using EntityLayer.Concreate
@model List<Writer>
@{
    ViewBag.Title = "Index";
    if (ViewBag.ses == 2)
    {
        Layout = "~/Views/Shared/_WriterLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>FreeFolio - Freelancer Portfolio Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/AdminLTE-3.0.4/freelancer-portfolio-template/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/AdminLTE-3.0.4/freelancer-portfolio-template/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/AdminLTE-3.0.4/freelancer-portfolio-template/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/AdminLTE-3.0.4/freelancer-portfolio-template/css/style.css" rel="stylesheet">
</head>

<body data-spy="scroll" data-target=".navbar" data-offset="51">
    <!-- Navbar Start -->
    <nav class="navbar fixed-top shadow-sm navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-lg-5">
        <a href="index.html" class="navbar-brand ml-lg-3">
            <h1 class="m-0 display-5"><span class="text-primary">Free</span>Folio</h1>
        </a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse px-lg-3" id="navbarCollapse">
            <div class="navbar-nav m-auto py-0">
                <a href="#home" class="nav-item nav-link active">Yazar</a>
                <a href="#about" class="nav-item nav-link">Hakkımda</a>
                <a href="#skill" class="nav-item nav-link">Yetenekler</a>
                <a href="#testimonial" class="nav-item nav-link">Sözler</a>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    <!-- Video Modal Start -->
    <div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <!-- 16:9 aspect ratio -->
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="" id="video" allowscriptaccess="always" allow="autoplay"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Video Modal End -->
    <!-- Header Start -->
    @foreach (var item in Model)
    {
        <div class="container-fluid bg-primary d-flex align-items-center mb-5 py-5" id="home" style="min-height: 100vh;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-5 px-5 pl-lg-0 pb-5 pb-lg-0">
                        <img class="img-fluid w-100 rounded-circle shadow-sm" src="@item.WriterImage" alt="">
                    </div>
                    <div class="col-lg-7 text-center text-lg-left">
                        <h3 class="text-white font-weight-normal mb-3">Ben</h3>
                        <h1 class="display-3 text-uppercase text-primary mb-2" style="-webkit-text-stroke: 2px #ffffff;">@item.WriterName @item.WriterSurname</h1>
                        <h1 class="typed-text-output d-inline font-weight-lighter text-white"></h1>
                        <div class="typed-text d-none">@item.WriterAttention1, @item.WriterAttention2, @item.WriterAttention3, @item.WriterAttention4</div>

                    </div>
                </div>
            </div>
        </div>


        <!-- Header End -->
        <!-- About Start -->
        <div class="container-fluid py-5" id="about">
            <div class="container">
                <div class="position-relative d-flex align-items-center justify-content-center">
                    <h1 class="display-1 text-uppercase text-white" style="-webkit-text-stroke: 1px #dee2e6;">HAKKIMDA</h1>
                    <h1 class="position-absolute text-uppercase text-primary">HAKKIMDA</h1>
                </div>
                <div class="row align-items-center">
                    <div class="col-lg-5 pb-4 pb-lg-0">
                        <img class="img-fluid rounded w-100" src="@item.WriterImage" alt="">
                    </div>
                    <div class="col-lg-7">
                        <h3 class="mb-4">@item.WriterAttention1 & @item.WriterAttention2</h3>
                        <p>@item.WriterLongAbout</p>
                        <div class="row mb-3">
                            <div class="col-sm-6 py-2"><h6>İsim: <span class="text-secondary">@item.WriterName @item.WriterSurname</span></h6></div>
                            <div class="col-sm-6 py-2"><h6>Doğum Günü: <span class="text-secondary">@(((DateTime)item.WriterDateTime).ToString("dd-MMM-yyyy"))</span></h6></div>
                            <div class="col-sm-6 py-2"><h6>Meslek: <span class="text-secondary">@item.WriterTitle</span></h6></div>
                            <div class="col-sm-6 py-2"><h6>Deneyim: <span class="text-secondary">@item.WriterExperience</span></h6></div>
                            <div class="col-sm-6 py-2"><h6>Tel No: <span class="text-secondary">@item.WriterPhoneNumber</span></h6></div>
                            <div class="col-sm-6 py-2"><h6>Email: <span class="text-secondary">@item.WriterMail</span></h6></div>
                        </div>
                        <a href="" class="btn btn-outline-primary mr-4">Hire Me</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- About End -->
        <!-- Qualification Start -->
        <!-- Qualification End -->
        <!-- Skill Start -->
        <div class="container-fluid py-5" id="skill">
            <div class="container">
                <div class="position-relative d-flex align-items-center justify-content-center">
                    <h1 class="display-1 text-uppercase text-white" style="-webkit-text-stroke: 1px #dee2e6;">YETENEKLER</h1>
                    <h1 class="position-absolute text-uppercase text-primary">YETENEKLERİM</h1>
                </div>
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="skill mb-4">
                            <div class="d-flex justify-content-between">
                                <h6 class="font-weight-bold">@item.WriterSkill1</h6>
                                <h6 class="font-weight-bold">@item.WriterSkill11%</h6>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-primary" role="progressbar" aria-valuenow="@item.WriterSkill11" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="skill mb-4">
                            <div class="d-flex justify-content-between">
                                <h6 class="font-weight-bold">@item.WriterSkill2</h6>
                                <h6 class="font-weight-bold">@item.WriterSkill22%</h6>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.WriterSkill22" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="skill mb-4">
                            <div class="d-flex justify-content-between">
                                <h6 class="font-weight-bold">@item.WriterSkill3</h6>
                                <h6 class="font-weight-bold">@item.WriterSkill33%</h6>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="@item.WriterSkill33" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="skill mb-4">
                            <div class="d-flex justify-content-between">
                                <h6 class="font-weight-bold">@item.WriterSkill4</h6>
                                <h6 class="font-weight-bold">@item.WriterSkill44%</h6>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="@item.WriterSkill44" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="skill mb-4">
                            <div class="d-flex justify-content-between">
                                <h6 class="font-weight-bold">@item.WriterSkill5</h6>
                                <h6 class="font-weight-bold">@item.WriterSkill55%</h6>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-dark" role="progressbar" aria-valuenow="@item.WriterSkill55" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="skill mb-4">
                            <div class="d-flex justify-content-between">
                                <h6 class="font-weight-bold">@item.WriterSkill6</h6>
                                <h6 class="font-weight-bold">@item.WriterSkill66%</h6>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-info" role="progressbar" aria-valuenow="@item.WriterSkill66" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*dasdasdasdas*@
        <div class="container-fluid py-5" id="testimonial">
            <div class="container">
                <div class="position-relative d-flex align-items-center justify-content-center">
                    <h1 class="display-1 text-uppercase text-white" style="-webkit-text-stroke: 1px #dee2e6;">MİSYON</h1>
                    <h1 class="position-absolute text-uppercase text-primary">VİZYON</h1>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="owl-carousel testimonial-carousel">
                            <div class="text-center">
                                <i class="fa fa-3x fa-quote-left text-primary mb-4"></i>
                                <h4 class="font-weight-light mb-4">Yazmak yaşamak demek değildir, yaşamanın dışına çıkmaktır.</h4>
                                <img class="img-fluid rounded-circle mx-auto mb-3" src="~/AdminLTE-3.0.4/freelancer-portfolio-template/img/BlaiseYazar.jpg" style="width: 80px; height: 80px;">
                                <h5 class="font-weight-bold m-0">Söz Sahibi</h5>
                                <span>Blaise Cendrars</span>
                            </div>@*paginge bakkkkkkkkkkkkkkk!!!!!!!!!*@
                            <div class="text-center">
                                <i class="fa fa-3x fa-quote-left text-primary mb-4"></i>
                                <h4 class="font-weight-light mb-4">Yirmi yaşında şiirler yazıyorsanız, bu yirmi yaşında olduğunuzu gösterir, kırkında şiir yazıyorsanız, bu şair olduğunuzu gösterir.</h4>
                                <img class="img-fluid rounded-circle mx-auto mb-3" src="~/AdminLTE-3.0.4/freelancer-portfolio-template/img/FrancisYazar.jpg" style="width: 80px; height: 80px;">
                                <h5 class="font-weight-bold m-0">Söz Sahibi</h5>
                                <span>Francis Carco</span>
                            </div>
                            <div class="text-center">
                                <i class="fa fa-3x fa-quote-left text-primary mb-4"></i>
                                <h4 class="font-weight-light mb-4">İnsan, içinde bir yabancıyı barındırır; yazmak, işte o yabancıya ulaşmaktır.</h4>
                                <img class="img-fluid rounded-circle mx-auto mb-3" src="~/AdminLTE-3.0.4/freelancer-portfolio-template/img/DurasYazar.jpg" style="width: 80px; height: 80px;">
                                <h5 class="font-weight-bold m-0">Söz Sahibi</h5>
                                <span>Marguerite Duras</span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- Testimonial End -->
    <!-- Blog Start -->
    <!-- Blog End -->
    <!-- Contact Start -->
    <!-- Contact End -->
    <!-- Footer Start -->
    @foreach (var item in Model)
    {
        <div class="container-fluid bg-primary text-white mt-5 py-5 px-sm-3 px-md-5">
            <div class="container text-center py-5">
                <div class="d-flex justify-content-center mb-4">
                    @if (item.WriterTwitter != null)
                    {
                        <a class="btn btn-light btn-social" href="@item.WriterTwitter"><i class="fab fa-twitter"></i></a>
                    }
                    else
                    {
                        <a class="btn btn-light btn-social" href="#"><i class="fab fa-twitter"></i></a>
                    }
                    @if (item.WriterInsatgram != null)
                    {
                        <a class="btn btn-light btn-social" href="@item.WriterInsatgram"><i class="fab fa-instagram"></i></a>
                    }
                    else
                    {
                        <a class="btn btn-light btn-social" href="#"><i class="fab fa-instagram"></i></a>
                    }
                    @if (item.WriterFacebook != null)
                    {
                        <a class="btn btn-light btn-social mr-2" href="@item.WriterFacebook"><i class="fab fa-facebook-f"></i></a>
                    }
                    else
                    {
                        <a class="btn btn-light btn-social mr-2" href="#"><i class="fab fa-facebook-f"></i></a>
                    }


                </div>
                <div class="d-flex justify-content-center mb-3">
                    <a class="text-white" href="#">Gizlilik</a>
                    <span class="px-3">|</span>
                    <a class="text-white" href="#">Şartlar</a>
                    <span class="px-3">|</span>
                    <a class="text-white" href="#">SSS</a>
                    <span class="px-3">|</span>
                    <a class="text-white" href="#">Yardım</a>
                </div>

            </div>
        </div>
    }

    <!-- Footer End -->
    <!-- Scroll to Bottom -->
    <i class="fa fa-2x fa-angle-down text-white scroll-to-bottom"></i>

    <!-- Back to Top -->
    <a href="#" class="btn btn-outline-dark px-0 back-to-top"><i class="fa fa-angle-double-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/freelancer-portfolio-template/lib/typed/typed.min.js"></script>
    <script src="~/AdminLTE-3.0.4/freelancer-portfolio-template/lib/easing/easing.min.js"></script>
    <script src="~/AdminLTE-3.0.4/freelancer-portfolio-template/lib/waypoints/waypoints.min.js"></script>
    <script src="~/AdminLTE-3.0.4/freelancer-portfolio-template/lib/owlcarousel/owl.carousel.min.js"></script>

    <script src="~/AdminLTE-3.0.4/freelancer-portfolio-template/lib/isotope/isotope.pkgd.min.js"></script>
    <script src="~/AdminLTE-3.0.4/freelancer-portfolio-template/lib/lightbox/js/lightbox.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/AdminLTE-3.0.4/freelancer-portfolio-template/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/AdminLTE-3.0.4/freelancer-portfolio-template/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/AdminLTE-3.0.4/freelancer-portfolio-template/js/main.js"></script>
</body>

</html>

