@model EntityLayer.Concreate.Category
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>Yeni Kategori Ekleme Sayfası</h1>
<br/>
@using (Html.BeginForm("GetCategoryAdd","Category",FormMethod.Post))
{
    <div class="form form-group">
        @Html.Label("KATEGORİ ADI:")
        @Html.TextAreaFor(x => x.CategoryName)
        @Html.ValidationMessageFor(x=>x.CategoryName)
        <br /><br />
        @Html.Label("AÇIKLAMAYI GİRİNİZ:")
        @Html.TextAreaFor(x => x.CategoryDescription)
        @Html.ValidationMessageFor(x=>x.CategoryDescription)
        <br /><br />
        <button class="btn btn-info">KAYDET</button>

    </div>
}
