@using EntityLayer.Concreate
@model List<Contact>
<a href="/Message/AddNewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Seçenekler</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item active">
                <a href="/Contact/Index" class="nav-link">
                    <i class="fas fa-mail-bulk"></i> İletişim
                    @if (ViewBag.Contact != 0)
                    {
                        <span class="badge bg-primary float-right">@ViewBag.Contact</span>
                    }
                </a>
            </li>
            <li class="nav-item active">
                <a href="/Message/Inbox" class="nav-link">
                    <i class="fas fa-inbox"></i> Gelen Mesajlar
                    @if (ViewBag.Message != 0)
                    {
                        <span class="badge bg-primary float-right">@ViewBag.Message</span>
                    }
                    
                </a>
            </li>
            <li class="nav-item">
                <a href="/Message/SendBox" class="nav-link">
                    <i class="far fa-envelope"></i> Gönderilen Mesajlar
                </a>
            </li>
            <li class="nav-item">
                <a href="/Message/MessageDraftMenu" class="nav-link">
                    <i class="far fa-file-alt"></i> Taslaklar
                </a>
            </li>
            <li class="nav-item">
                <a href="/Contact/CheckedContact" class="nav-link">
                    <i class="fas fa-check"></i> Çözülmüş Sorunlar
                    <span class="badge bg-warning float-right">65</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/Message/DeleteBoxResult" class="nav-link">
                    <i class="far fa-trash-alt"></i> Çöp Kutusu
                </a>
            </li>
        </ul>
    </div>
    <!-- /.card-body -->
</div>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Diğer</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="far fa-circle text-danger"></i>
                    Önemliler
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="far fa-circle text-warning"></i> Tanıtımlar
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="far fa-circle text-primary"></i>
                    Sosyal Medya
                </a>
            </li>
        </ul>
    </div>
    <!-- /.card-body -->
</div>
