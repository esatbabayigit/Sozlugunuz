@using System.Web.Mvc.Html
@model EntityLayer.Concreate.Heading
@{
    ViewBag.Title = "WriterNewHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<br />
<h2>BAŞLIK EKLEME</h2>
@using (Html.BeginForm("WriterNewHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("BAŞLIK ADI:")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("KATEGORİ:")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Category.CategoryName)
        <br />

        <button class="btn btn-info">BAŞLIK EKLE</button>
    </div>
}

