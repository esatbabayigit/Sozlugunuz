@using System.Web.Mvc.Html
@model EntityLayer.Concreate.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
<h2>BAŞLIK EKLEME</h2>
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("BAŞLIK ADI:")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("KATEGORİ:")
        @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.vlc,new{@class ="form-control"})
        <br />
        @Html.Label("YAZAR:")
        @Html.DropDownListFor(x=>x.WriterID,(List<SelectListItem>)ViewBag.wit,new {@class ="form-control"})

        <br />
       
        <button class="btn btn-info">BAŞLIK EKLE</button>
    </div>
}

