@using EntityLayer.Concreate
@model PagedList.IPagedList<Heading>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/butoncssleri/aramabutonu.css" type="text/css" />
</head>
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Başlık İşlemleri</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 10%">
                        Başlık Adı
                    </th>
                    <th style="width: 10%">
                        Oluşturan Yazar
                    </th>
                    <th style="width: 3%">
                        Durum
                    </th>
                    <th style="width: 3%" class="text-center">
                        Kategori
                    </th>
                    <th style="width: 20%">
                        <form method="post" action="/Heading/Index">
                            <div class="input-group input-group-sm">

                                <input type="text" class="form-control" name="yazi" placeholder="Başlık Kutusunda Ara">

                                <div class="input-group-append">
                                    <button class="my-button">
                                        <i class="fa fa-search" style="color: white; margin-right: 10px;"></i>
                                    </button>
                                </div>
                                <div class="input-group-append">
                                    <button class="my-button" name="ses" value="1">
                                        <i class="nav-icon fas fa-bars" style="color: white; margin-right: 10px;"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.HeadingID
                        </td>
                        <td>
                            <a>
                                @item.HeadingName
                            </a>
                            <br />
                            <small>
                                @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                            </small>
                        </td>
                        <td>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                </li>
                            </ul>
                        </td>
                        @if (@item.HeadingStatus == true)
                        {

                            <td><font color="green">@item.HeadingStatus</font></td>
                        }
                        @if (@item.HeadingStatus == false)
                        {
                            <td><font color="red">@item.HeadingStatus</font></td>
                        }

                        <td class="project-state">
                            <span class="badge badge-warning">@item.Category.CategoryName</span>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                <i class="fas fa-folder">
                                </i>
                                İçerikler
                            </a>
                            <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingID">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Düzenle
                            </a>
                            @if (item.HeadingStatus == true)
                            {
                                <a class="btn btn-danger btn-sm" name="parameter" value="pasif" href="/Heading/HeadingDelete/@item.HeadingID">
                                    <i class="fas fa-trash">
                                    </i>
                                    Pasif Yap
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-success btn-sm" name="parameter" value="aktif" href="/Heading/HeadingDelete/@item.HeadingID">
                                    <i class="fas fa-trash">
                                    </i>
                                    Aktif Yap
                                </a>
                            }

                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
<body>
    <div class="btn-group">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.PageCount > 1)
                {
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { p = 1 })"><i class="fas fa-angle-double-left"></i></a>
                    </li>
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { p = Model.PageNumber - 1 })"><i class="fas fa-angle-left"></i></a>
                    </li>

                    for (int i = 1; i <= Model.PageCount; i++)
                    {
                        if (i == Model.PageNumber)
                        {
                            <li class="page-item active"><a class="page-link">@i</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { p = i })">@i</a></li>
                        }
                    }

                    <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { p = Model.PageNumber + 1 })"><i class="fas fa-angle-right"></i></a>
                    </li>
                    <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { p = Model.PageCount })"><i class="fas fa-angle-double-right"></i></a>
                    </li>
                }
            </ul>
        </nav>
        <button type="button" onclick="location.reload()" class="btn btn-primary btn-sm"><i class="fas fa-sync-alt"></i></button>
    </div>
    <br/>
</body>
</body>
</html>
<a href="/Heading/AddHeading" class="btn btn-primary">BAŞLIK OLUŞTURMA</a>



