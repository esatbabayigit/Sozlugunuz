@using EntityLayer.Concreate
@model PagedList.IPagedList<Category>
@using PagedList
@using PagedList.Mvc
@using System.Web.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-HJ11q0myjPkUtsdFlTjTbT/3LqZ+3/45PzYfgkmfjG1sNtyqb+R4Gj4ErBwJHuZyz+mgZpPLXjYmJdSUDC2m+w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>AD</th>
        <th>AÇIKLAMA</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>BAŞLIKLAR</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td><a href="/AdminCategoryController/DeleteCategory/@item.CategoryID" class="btn btn-danger">SİL</a></td>
            <td><a href="/AdminCategoryController/EditCategory/@item.CategoryID" class="btn btn-warning">GÜNCELLE</a></td>
            <td><a href="/Heading/Index/@item.CategoryID" class="btn btn-primary">BAŞLIKLAR</a></td>
        </tr>
    }
</table>
<body>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (Model.PageCount > 1)
            {
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { p = 1 })"><i class="fas fa-angle-double-left"></i></a>
                </li>
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { p = Model.PageNumber - 1 })"><i class="fas fa-angle-left"></i></a>
                </li>

                for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active"><a class="page-link">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { p = i })">@i</a></li>
                    }
                }

                <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { p = Model.PageNumber + 1 })"><i class="fas fa-angle-right"></i></a>
                </li>
                <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { p = Model.PageCount })"><i class="fas fa-angle-double-right"></i></a>
                </li>
            }
        </ul>
    </nav>
</body>

<a href="/AdminCategoryController/AddCategory" class="btn btn-info">Yeni Kategori</a>

