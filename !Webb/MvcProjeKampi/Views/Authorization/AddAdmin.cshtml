@model EntityLayer.Concreate.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))
{
    <div class="form form-group">
        @Html.Label("Admin Email:")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Admin Şifre:")
        @Html.TextAreaFor(x => x.AdminPassword, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Admin Rolü:")
        @Html.TextAreaFor(x => x.AdminRole, new { @class = "form-control" })
        <br /><br />
        <button class="btn btn-info">KAYDET</button>

    </div>
}

