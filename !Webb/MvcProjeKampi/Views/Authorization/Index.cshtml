@using EntityLayer.Concreate
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<style>
    body {
        font-family: "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", Helvetica, Arial, sans-serif;
    }
</style>

@if (ViewBag.value == 1)
{
    <script>
        $(document).ready(function () {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Yetkisi A Olan Admini Ana Admin Dışında Kimse Değiştiremez',
                footer: '<a href="">BABAYİĞİT</a>',
                confirmButtonText: 'Tamam'
            })
        });
    </script>
}
else if (ViewBag.value == 2)
{
    <script>
        $(document).ready(function () {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'B Yetkilendirmesine Sahip Yönetici A Olanı Değiştiremez',
                footer: '<a href="">BABAYİĞİT</a>',
                confirmButtonText: 'Tamam'
            })
        });
    </script>
}
else if (ViewBag.value == 3)
{
    <script>
        $(document).ready(function () {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'C Yetkilendirmesine Sahip Yönetici A,B ve C Olanı Değiştiremez',
                footer: '<a href="">BABAYİĞİT</a>',
                confirmButtonText: 'Tamam'
            })
        });
    </script>
}

<br/>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Modal Örneği</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <div style="font-family: 'Montserrat', sans-serif; font-size: 20px; color: #333; background-color: #f5f5f5; padding: 20px;">
                <h2 style="font-size: 28px; color: #333; margin-bottom: 10px;">Yetkilendirmeler Hakkında</h2>
                <p style="font-size: 20px; line-height: 1.5; margin-bottom: 20px;">Burası sözlüğünüz sayfasının yetkilendirme sayfasıdır. Aşağıya koyduğumuz buton sayesinde siz değerli adminimiz yetkilendirmeler hakkında daha çok bilgi sahibi olabilir.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">Daha Fazla Bilgi</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Daha Fazla Bilgi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Yetkilendirmeler Hakkında:</p>
                <ul>
                    <li>Yetkinizi değiştirdikten sonra sisteme yeniden otantike olmanız gerekir.</li>
                    <li>A, yetkisinde olsanız bile A yetkisine sahip kişinin yetkisini değiştiremezsiniz.</li>
                    <li>B, yetkisi sadece B ve C yetkisi verir. C ise hiç yetki veremez.</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<br/>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Durum</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AdminId</th>
            <td>@item.AdminUserName</td>
            <td>@item.AdminRole</td>
            <td>@item.AdminStatus</td>
            @if (item.AdminStatus == false)
            {
                <td><a href="/Authorization/DeleteAdmin/@item.AdminId"><button class="btn btn-success">Aktif Yap</button></a></td>
            }
            else
            {
                <td><a href="/Authorization/DeleteAdmin/@item.AdminId"><button class="btn btn-danger">Pasif Yap</button></a></td>
            }
            <td><a href="/Authorization/ChangeAdminRole/@item.AdminId" class="btn btn-warning">Yetkisini Değiştir</a></td>
        </tr>
    }
</table>

<a href="/Authorization/AddAdmin" class="btn btn-info">Yeni Admin Oluştur</a>